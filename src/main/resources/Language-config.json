{
    "languages": {
        "cpp": {
            "version": "17",
            "fileExtension": ".cpp",
            "compiler": {
                "path": "/usr/bin/g++",
                "flags": ["-O2", "-Wall"],
                "timeout": 10000,
                "env": {
                    "CC": "g++",
                    "CFLAGS": "-O2"
                }
            },
            "runtime": {
                "allowedLibraries": ["libc.so", "libstdc++.so"],
                "env": {
                    "LD_LIBRARY_PATH": "/usr/lib"
                }
            },
            "resources": {
                "maxExecutionTime": 5000,
                "maxMemory": 268435456,
                "maxProcesses": 1,
                "maxOutput": 10485760,
                "maxFileSize": 5120
            },
            "security": {
                "allowedSystemCalls": ["read", "write", "exit"],
                "allowedPaths": ["/tmp", "/usr/lib"],
                "networkAccess": false,
                "fileSystemAccess": false
            }
        }
    }
}